//Q2. Check Anagram
//Given two strings s1 and s2, check if they are anagrams (same characters, same frequency).

#include <iostream>
#include <string>
using namespace std;

int main() {
    string s1, s2;
    cout << "Enter first string: ";
    cin >> s1;
    cout << "Enter second string: ";
    cin >> s2;

    if (s1.length() != s2.length()) {
        cout << "No, the strings are not anagrams.\n";
        return 0;
    }

    int freq[256] = {0}; 

    
    for (int i = 0; i < s1.length(); i++) {
        freq[(unsigned char)s1[i]]++;
    }

    
    for (int i = 0; i < s2.length(); i++) {
        freq[(unsigned char)s2[i]]--;
    }

    
    for (int i = 0; i < 256; i++) {
        if (freq[i] != 0) {
            cout << "No, the strings are not anagrams.\n";
            return 0;
        }
    }

    cout << "Yes, the strings are anagrams.\n";
    return 0;
}

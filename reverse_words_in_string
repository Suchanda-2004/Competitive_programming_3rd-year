//Q1. Reverse Words in a String
//Given a string s, reverse the order of words (words are separated by spaces).

#include <iostream>
#include <string>
using namespace std;
string reverseWords(string s) {
    string result = "";
    int i = s.size() - 1;

    while (i >= 0) {
        
        while (i >= 0 && s[i] == ' ') i--;

        if (i < 0) break;

        
        int j = i;
        while (i >= 0 && s[i] != ' ') i--;

       
        string word = s.substr(i + 1, j - i);

        
        if (!result.empty()) result += " ";
        result += word;
    }

    return result;
}

int main() {
    string s1 = " It's a rainy day  ";
   
    cout << reverseWords(s1) << endl;  
    
    return 0;
}
